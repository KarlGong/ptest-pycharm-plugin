<idea-plugin version="2">
  <id>karl.gong.plugin.ptest</id>
  <name>ptest</name>
  <version>3.9</version>
  <vendor email="karl.gong@outlook.com" url="https://github.com/KarlGong">Karl Gong</vendor>

  <description><![CDATA[
      <p>PyCharm plugin for <a href="https://pypi.python.org/pypi/ptest">ptest</a></p>
      <p>Easily to run/debug ptest using the standard run configuration.</p>
    ]]></description>

  <change-notes><![CDATA[
        <p>3.9</p>
        <ul>
        <li>Fix no ptest menu shown when right click a class which inherit @TestClass.</li>
        </ul>
        <p>3.8</p>
        <ul>
        <li>Fix no ptest menu shown when right click dict.</li>
        </ul>
        <p>3.7</p>
        <ul>
        <li>Shorten run configuration name.</li>
        </ul>
        <p>3.6</p>
        <ul>
        <li>Support ptest 1.5.1.</li>
        </ul>
        <p>3.5</p>
        <ul>
        <li>Support pycharm 5.0.</li>
        </ul>
        <p>3.4</p>
        <ul>
        <li>Support group in run/debug panel.</li>
        </ul>
        <p>3.2</p>
        <ul>
        <li>Support ptest 1.4.</li>
        </ul>
        <p>3.0</p>
        <ul>
        <li>Support inspecting redeclared decorated names.</li>
        </ul>
        <p>2.0</p>
        <ul>
        <li>Support rerunning the failed/skipped tests in last run.</li>
        </ul>
        <p>1.0</p>
        <ul>
        <li>Support running/debugging ptest using the standard run configuration.</li>
        </ul>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="143.589"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <depends>com.intellij.modules.python</depends>
    
  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <configurationType implementation="com.iselsoft.ptest.runconfiguration.PTestConfigurationType" order="FIRST"/>
      <runConfigurationProducer implementation="com.iselsoft.ptest.runconfiguration.PTestConfigurationProducer" order="FIRST"/>
      <inspectionToolProvider implementation="com.iselsoft.ptest.inspection.PTestRedeclarationProvider"/>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>