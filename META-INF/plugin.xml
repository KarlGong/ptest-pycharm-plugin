<idea-plugin version="2">
  <id>karl.gong.plugin.ptest</id>
  <name>ptest</name>
  <version>1.0</version>
  <vendor email="karl.gong@outlook.com" url="https://pypi.python.org/pypi/ptest">Karl Gong</vendor>

  <description><![CDATA[
      <p>PyCharm plugin for running ptest.</p>
      <p>Currently, the only feature is that it makes it easy to run ptest from within the
      IDE using the standard context menu options.</p>
    ]]></description>

  <change-notes><![CDATA[
      <p>1.0</p>
      <ul>
      <li>Support running test by ptest.</li>
      </ul>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>
    
  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <configurationType implementation="karl.gong.ptest.PythonPTestConfigurationType" order="FIRST"/>
      <runConfigurationProducer implementation="karl.gong.ptest.PythonPTestConfigurationProducer" order="FIRST"/>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>